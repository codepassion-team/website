---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { OurServiceItem } from "~/types";

const features: Array<OurServiceItem> = [
  {
    title: "Website",
    description: {
      short:
        "Communicate and connect your brand. Build trust and transparency with stakeholders.",
      long: "Elevate your brand’s digital presence with our expertly crafted corporate websites. We specialize in creating responsive, user-friendly websites that communicate your company’s values and vision. Our investor relations websites are designed to build trust and transparency, providing stakeholders with essential financial data and updates in a professional and accessible format.",
      thai: "สร้างความสำเร็จด้วยการเชื่อมต่อ สร้างความไว้วางใจและความโปร่งใสกับผู้ถือหุ้น",
    },
    icon: "mdi:monitor-dashboard",
  },
  {
    title: "Data",
    description: {
      short: "Empower your data. Turn complexity into insights",
      long: "Harness the power of your data with our comprehensive data services. We offer seamless data integration, ensuring your systems work in harmony, efficient data management to keep your information secure and organized, and advanced data visualization that turns complex data into actionable insights, empowering you to make informed decisions with confidence.",
      thai: "เสริมการเติบโต สร้างความได้เปรียบในการแข่งขันด้วยข้อมูล",
    },
    icon: "mdi:finance",
  },
  {
    title: "E-Commerce",
    description: {
      short: "Enhance customer experience. Drive global sales.",
      long: "Transform your business with our end-to-end e-commerce solutions. From intuitive user interfaces to secure payment gateways, we build e-commerce platforms that enhance the customer experience and drive sales. Whether you’re starting from scratch or optimizing an existing store, our tailored solutions ensure your online business thrives in a competitive market.",
      thai: "สร้างความแตกต่าง ยกระดับการเข้าถึงสู่เวทีโลก",
    },
    icon: "mdi:cart-outline",
  },
];
---

<ContentSection title="Our Services" id="services">
  <Fragment slot="lead">
    We provide services to make your technologies <span class="gradient-text">
      driven</span
    > your business.
  </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      features.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 p-6">
          <div class="size-24 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description.short}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
